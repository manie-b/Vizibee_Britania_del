<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/TestSpinnerStyle</item>

    </style>
    <style name="TestSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#757575</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">#F5F5F5</item>
    </style>
    <style name="Theme.UserDialog" parent="android:style/Theme.Dialog">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="windowActionBar">false</item>


        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:textColor">@color/black</item>
        <item name="android:background">#ffffff</item>
        <item name="colorAccent">#DC501F</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Tooltip2">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/tooltip_bg</item>
        <item name="colorAccent">#DC501F</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="backgroundColor">@color/tooltip_bg</item>

        <!--        <item name="arrowWidth">48dp</item>
                <item name="arrowHeight">48dp</item>-->
    </style>

    <style name="Tooltip">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/tittooltip_bg</item>
        <item name="colorAccent">#DC501F</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="backgroundColor">@color/tittooltip_bg</item>

        <!--        <item name="arrowWidth">48dp</item>
                <item name="arrowHeight">48dp</item>-->
    </style>

    <style name="ConfirmDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:textColor">@color/black</item>
        <item name="android:background">#ffffff</item>
        <item name="colorAccent">#DC501F</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="dropdownDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/single_gridrow_line</item>
        <item name="colorAccent">@drawable/single_gridrow_line</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SeekBar" parent="@android:style/Widget.SeekBar">
    <item name="android:thumb">@drawable/seekbarthumb</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:thumbOffset">5dip</item>
    </style>

    <style name="MyAlert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/white</item>
    </style>


</resources>
