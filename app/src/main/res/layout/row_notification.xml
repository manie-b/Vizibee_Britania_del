<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:windowSoftInputMode="adjustPan|adjustResize"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:padding="7dp"

        >
        <TextView
            android:id="@+id/txt_nottitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notificationtitle"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:textColor="@color/notif_title"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/txt_nottime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:02"
            android:layout_toRightOf="@+id/txt_nottitle"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txt_nottitle"
            android:textColor="@color/notif_time"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/txt_notmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notificationmessage"
            android:textStyle="normal"
            android:textColor="@color/notif_message"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/txt_nottitle"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/card_notiimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@+id/txt_notmessage"
            app:cardCornerRadius="0dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_notibanner"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/icon"
                android:scaleType="fitXY"


                />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>