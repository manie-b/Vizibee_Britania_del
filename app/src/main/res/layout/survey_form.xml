<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.mapolbs.vizibeebritannia.Activity.SurveyForm">



    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EB1F2A">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

        <ImageView
            android:visibility="gone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imginfo"
            android:src="@drawable/info"
          />


        <TextView
            android:id="@+id/txt_visitdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Survey Form"
            android:textSize="@dimen/header_textsize"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
           />
        </LinearLayout>
        <!--<ImageView
            android:layout_width="47dp"
            android:layout_height="35dp"
            android:id="@+id/imageView"
            android:background="@drawable/vizilogo"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />-->
        <ImageView
            android:layout_width="47dp"
            android:layout_height="35dp"
            android:id="@+id/img_notifcation"
            android:src="@drawable/notification"
            android:layout_marginEnd="0dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/txtnotifications_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/notification_round"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:text="1"
            android:textColor="@color/notif_txt_count"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lilayout">

        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">


        </ViewFlipper>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/lilayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#EBEFF2"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|right"
        android:layout_centerHorizontal="true" >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/header_textsize"
            android:textStyle="bold"
            android:textColor="#3C8DBC"
            android:id="@+id/btnnext"
            android:background="@drawable/next"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/header_textsize"
            android:textStyle="bold"
            android:textColor="#3C8DBC"
            android:id="@+id/btnprevious"
            android:layout_marginLeft="5dp"
            android:background="@drawable/previous"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnsubmit"
            android:background="@drawable/submit"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imghome"
        android:padding="13dp"
        android:src="@drawable/home"
        android:background="@drawable/circle_footer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imglogout"
        android:padding="13dp"
        android:src="@drawable/logout"
        android:background="@drawable/circle_footer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp" />



</RelativeLayout>
